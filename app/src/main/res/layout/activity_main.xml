<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pizzaImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/pizza_hut_logo"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Pizza Size:"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <RadioGroup
            android:id="@+id/sizeGroup"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <RadioButton android:id="@+id/small" android:text="Small"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/medium" android:text="Medium"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/large" android:text="Large"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Crust Type:"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/crustSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#FF5722"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toppings:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <CheckBox
            android:id="@+id/cheese"
            android:text="Cheese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/pepperoni"
            android:text="Pepperoni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/mushrooms"
            android:text="Mushrooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/onions"
            android:text="Onions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/sausage"
            android:text="Sausage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/bacon"
            android:text="Bacon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/ham"
            android:text="Ham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/bellpeppers"
            android:text="Bell Peppers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/olives"
            android:text="Black Olives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/greenolives"
            android:text="Green Olives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/pineapple"
            android:text="Pineapple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/spinach"
            android:text="Spinach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/tomatoes"
            android:text="Tomatoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/chicken"
            android:text="Chicken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/jalapenos"
            android:text="JalapeÃ±os"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/anchovies"
            android:text="Anchovies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/capsicum"
            android:text="Capsicum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/paneer"
            android:text="Paneer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/sweetcorn"
            android:text="Sweet Corn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/bbq"
            android:text="BBQ Sauce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/garlic"
            android:text="Garlic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <Button
            android:id="@+id/orderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/orderSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="Order summary will appear here..."
            android:padding="8dp"/>
    </LinearLayout>
</ScrollView>
